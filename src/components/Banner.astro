---
const { title } = Astro.props;

let titleStyles = {
    fontSize: '3rem',          // Increased font size
    textAlign: 'center',       // Center-align title
    fontWeight: 900,           // Bold weight
    lineHeight: '1.2em',       // Default line height
    color: 'Black',            // Default text color
    fontFamily: '"Lora", serif', // Font family
    fontStyle: 'normal',       // Font style
    fontOpticalSizing: 'auto', // Font optical sizing
};

// Override styles based on specific titles
if (title === "Contact Us") {
    titleStyles = {
        ...titleStyles,
        fontSize: '3.5rem',  // Increased font size for "Contact Us"
    };
} else if (title === "About Us") {
    titleStyles = {
        ...titleStyles,
        fontSize: '3rem',    // Increased font size for "About Us"
    };
}
---

<html>
  <!-- ============================================ -->
  <!--                   Banner                     -->
  <!-- ============================================ -->

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&display=swap"
    rel="stylesheet"
  />

  <div id="banner-712">
    <div class="cs-container">
      <!-- Apply dynamic styles -->
      <span 
        class="cs-int-title" 
        style={`font-size: ${titleStyles.fontSize}; 
                text-align: ${titleStyles.textAlign}; 
                font-weight: ${titleStyles.fontWeight}; 
                line-height: ${titleStyles.lineHeight}; 
                color: ${titleStyles.color}; 
                font-family: ${titleStyles.fontFamily}; 
                font-style: ${titleStyles.fontStyle}; 
                font-optical-sizing: ${titleStyles.fontOpticalSizing};`}>
        {title}
      </span>
    </div>
    <!-- Background Image -->
    <picture class="cs-background">
      <!-- Mobile Image -->
      <source
        media="(max-width: 600px)"
        srcset="
          /public/svg/banner-gradient.svg
        "
      />
      <!-- Tablet and above Image -->
      <source
        media="(min-width: 601px)"
        srcset="
          /public/svg/banner-gradient.svg
        "
      />
      <img
        loading="lazy"
        decoding="async"
        src="/public/svg/banner-gradient.svg"
        alt="pills"
        width="1280"
        height="568"
        aria-hidden="true"
      />
    </picture>
  </div>

  <style>
    /* Banner Styles */
    #banner-712 {
      padding: clamp(10.9375rem, 10vw, 12.5rem) 1rem 6.25rem;
      position: relative;
      z-index: 1;
    }
    #banner-712 .cs-container {
      text-align: center;
      width: 100%;
      max-width: 80rem;
      margin: auto;
      display: flex;
      justify-content: center;
      align-items: center; /* Ensure vertical alignment */
      flex-direction: column;
      gap: 1rem;
    }
    #banner-712 .cs-background {
      width: 100%;
      height: 100%;
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      z-index: -1;
    }
    #banner-712 .cs-background:before {
      /* Background color overlay */
      content: "";
      position: absolute;
      display: block;
      height: 100%;
      width: 100%;
      opacity: 0.75;
      top: 0;
      left: 0;
      z-index: 1;
    }
    #banner-712 .cs-background img {
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      width: 100%;
      object-fit: cover;
    }
    /* Tablet and above */
    @media only screen and (min-width: 48rem) {
      #banner-712 .cs-background:before {
        opacity: 1;
        background: linear-gradient(
          90.01deg,
          rgba(0, 0, 0, 0.9) 16.86%,
          rgba(0, 0, 0, 0) 100%
        );
      }
    }
  </style>
</html>
